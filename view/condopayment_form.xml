<form>
    <label name="group"/>
    <field name="group"/>
    <newline/>
    <label name="unit"/>
    <field name="unit"/>
    <newline/>
    <label name="party"/>
    <field name="party"/>
    <newline/>
    <label name="mandate"/>
    <field name="mandate"/>
    <newline/>
    <notebook>
        <page string="Description" id="description">
            <label name="amount"/>
            <field name="amount"/>
            <label name="currency"/>
            <field name="currency" xexpand="0"/>
            <label name="date"/>
            <field name="date"/>
            <label name="description"/>
            <field name="description"/>
        </page>
        <page string="Mandate" id="mandate">
            <label name="sepa_end_to_end_id"/>
            <field name="sepa_end_to_end_id"/>
            <label name="debtor"/>
            <field name="debtor"/>
            <label name="type"/>
            <field name="type" xexpand="0"/>
        </page>
    </notebook>
    <group col="4" colspan="10" id="state_buttons">
        <label name="state"/>
        <field name="state" readonly="1"/>
        <group col="4" colspan="2" id="buttons">
            <button string="Draft" name="draft"/>
            <button string="Approve" name="approve"/>
            <button string="Fail" name="fail"/>
            <button string="Succeed" name="succeed"/>
        </group>
    </group>
</form>
