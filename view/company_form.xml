<data>
    <xpath expr="/form/notebook" position="inside">
        <page string="Invoicing" id="condo_invoicing">
            <separator string="Creditor Identifier" colspan="4" id="sepa"/>

            <group colspan="2" col="6" id="codes">
                <label name="creditor_bussines_code"/>
                <field name="creditor_bussines_code"/>

                <label name="sepa_creditor_identifier"/>
                <field name="sepa_creditor_identifier"/>

                <button name="calculate_sepa_creditor_identifier" string="Calculate"/>
            </group>
            <field name="sepa_mandates" mode="tree,form" colspan="4"
                view_ids="condominium_payment_sepa.mandate_view_list,condominium_payment_sepa.mandate_view_form"/>

        </page>
    </xpath>
